{
  "extends": [
    "react-app",
    "react-app/jest"
  ],
  "plugins": ["unused-imports", "import", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "external",
          "index",
          "sibling",
          "parent",
          "internal",
          "builtin",
          "object",
          "type"
        ]
      }
    ],
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
